---
import "../styles/base.css";
import jitrakIcon from "../assets/icons/jitrak-icon.png";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	pageTitle: string;
	children: unknown;
}
const { pageTitle } = Astro.props;
---

<html lang="en" class="dark">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href={jitrakIcon.src} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<div class="flex flex-col items-center justify-items-start">
			<Header />
			<h1 class="font-bold text-4xl my-4">{pageTitle}</h1>
			<slot />
			<Footer />
			<script>
				import "../scripts/menu.js";
			</script>
		</div>
	</body>
</html>
